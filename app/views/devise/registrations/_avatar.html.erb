<div class="container">
  <h3>Avatar actuel</h3>
  <%if @user.avatar.attached?%>
      <div class="avatar">
      <%= image_tag @user.avatar, alt: 'avatar' %>
      </div>
  <%else%>
    <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
    <%= form_tag avatars_path, multipart: true do %>
      <%= file_field_tag :avatar %>
      <%= submit_tag "uploader l'avatar" %>
    <% end %>
  <%end%>
</div>
